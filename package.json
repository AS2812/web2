{
  "name": "library-management-js",
  "version": "1.0.0",
  "private": true,
  "description": "Plain JS Express server serving frontend and REST API for library management.",
  "scripts": {
    "start": "node server.js",
    "build": "echo \"no build step\"",
    "test": "set NODE_ENV=test&& mocha \"tests/**/*.test.js\" --exclude \"tests/integration.test.js\" --exclude \"tests/integration.test.ts\" --timeout 10000",
    "test:watch": "set NODE_ENV=test&& mocha \"tests/**/*.test.js\" --exclude \"tests/integration.test.js\" --exclude \"tests/integration.test.ts\" --timeout 10000 --watch",
    "test:unit": "npm test",
    "test:integration": "echo \"Integration tests are not configured\"",
    "test:cov": "npm test -- --reporter spec",
    "test:runInBand": "npm test"
  },
  "dependencies": {
    "@sendinblue/client": "^3.3.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "netlify": "^23.12.3",
    "nodemailer": "^7.0.11",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "chai": "^6.2.1",
    "jest": "^30.2.0",
    "mocha": "^11.7.5",
    "supertest": "^7.1.4"
  }
}
